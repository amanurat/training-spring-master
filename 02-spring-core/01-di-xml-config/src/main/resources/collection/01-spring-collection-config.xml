<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="greetingCollection" class="com.training.collection.GreetingCollection">

        <property name="languageList">
            <list value-type="java.lang.String">
                <value>Thai</value>
                <value>English</value>
                <value>Japan</value>
                <value>Span</value>
            </list>
        </property>

        <property name="languageSet">
            <set>
                <value>Thai</value>
                <value>English</value>
            </set>
        </property>
        
        <property name="languageMap">
            <map>
                <entry key="1" value="Thai"></entry>
                <entry key="2" value="English"></entry>
            </map>
        </property>




    </bean>
</beans>